package 이중for문;

public class Ex03공포의별찍기 {

	public static void main(String[] args) {

		int fk=4;
		for (int i = 0; i <= fk; i++) { // 0~4 5번실행 5행
			for(int j = 0; j <= fk-i-1; j++) {//첫번째 반복출력 1
				System.out.print("1");		//조건문에 제약을걸어 변수조정
			}								//for문이 진행될때 1이 감소
			for(int k = 0; k <= i; k++) {	//두번째 반복출력2
				System.out.print("2");		//for문이 진행될때 2가 증가
			}
			System.out.println("");		// 한바퀴돌고 ln줄바꿈
		}
		
		
		
		
		
		
		
	}

}
