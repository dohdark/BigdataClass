package javaFestival;

import java.util.Scanner;

public class javaFestival_04일_02문제 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("행 개수 : ");
		int a = sc.nextInt();
		
		for(int i = 0; i < a; i++) {
			for(int j = a; j < i; j++) {
				System.out.print("*");
			}
			System.out.println("(ln)");
		}
	}

}
